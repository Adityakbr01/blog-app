{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": [
    "src/**/*",
    "generated/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "prisma.config.ts"
  ]
}